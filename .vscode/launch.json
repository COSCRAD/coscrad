{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest test API",
            "program": "${workspaceFolder}/node_modules/nx/bin/nx.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "api",
                "--testFile=${file}",
                "--runInBand",
            ],
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug API build",
            "port": 3131,
            "request": "attach",
            "type": "pwa-node"
        }
    ]
}

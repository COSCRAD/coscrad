{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2019", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@coscrad/api-interfaces": ["libs/api-interfaces/src/index.ts"],
            "@coscrad/commands": ["libs/commands/src/index.ts"],
            "@coscrad/data-types": ["libs/data-types/src/index.ts"],
            "@coscrad/media-player": ["libs/media-player/src/index.ts"],
            "@coscrad/validation": ["libs/validation/src/index.ts"],
            "@coscrad/validation-constraints": ["libs/validation-constraints/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}

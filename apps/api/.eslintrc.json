{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        // TODO: Re-enable this
        "@nrwl/nx/enforce-module-boundaries": [2],
        // When dealing generically with class instances we need object as a type
        "@typescript-eslint/ban-types": [0]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        // TODO: Re-enable this
        "@nrwl/nx/enforce-module-boundaries": [2]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
